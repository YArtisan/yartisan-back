{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "module": "esnext",
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution":"node",
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": [
    "src/**/*",
    "main.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "scripts": {
    "build": "tsc"
  }
}
